<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="maui_lotto.Resources.Pages.ResultPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"                             
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pages="clr-namespace:maui_lotto.Resources.Pages"                
             xmlns:vm="clr-namespace:maui_lotto.ViewModels"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:templates="clr-namespace:maui_lotto.Templates"
             Title="{Binding Title}"
             x:DataType="vm:ResultViewModel">

    <ContentPage.BindingContext>
        <vm:ResultViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior EventName="Appearing" Command="{Binding LoadCommand}" />
    </ContentPage.Behaviors>

    <CollectionView ItemsSource="{Binding ResultList}" SelectionMode="Single">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <templates:ResultItem/>    
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>