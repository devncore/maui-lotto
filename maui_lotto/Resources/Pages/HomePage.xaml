<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="maui_lotto.Resources.Pages.HomePage"
                xmlns="http://schemas.microsoft.com/dotnet/2021/maui"                             
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                xmlns:pages="clr-namespace:maui_lotto.Resources.Pages"                
                xmlns:vm="clr-namespace:maui_lotto.ViewModels"    
                xmlns:controls="clr-namespace:maui_lotto.Controls"
                x:DataType="vm:HomeViewModel" NavigationPage.HasNavigationBar="False">
    <ContentPage.BindingContext>
        <vm:HomeViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <VerticalStackLayout>
            <controls:MainHeader/>
            <controls:MainMenu/>
        </VerticalStackLayout>        
    </ContentPage.Content>    
</ContentPage>